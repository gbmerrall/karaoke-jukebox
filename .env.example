# Admin Configuration
# Password for admin user (username is always 'admin')
ADMIN_PASSWORD=your_secure_password_here

# YouTube API Configuration
# Get your API key from: https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY=your_youtube_api_key_here

# Queue Management
# Remove queue items older than this many hours (default: 4)
QUEUE_CLEANUP_THRESHOLD_HOURS=4

# Run cleanup job every this many hours (default: 1)
QUEUE_CLEANUP_INTERVAL_HOURS=1

# Maximum number of items allowed in queue (0 = unlimited)
MAX_QUEUE_SIZE=0

# Application Configuration
# Secret key for session signing (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your_secret_key_here

# Data directory for videos and database (relative or absolute path)
DATA_DIR=./data

# Server Configuration - Required for Chromecast playback
# The IP address or hostname that Chromecast devices can use to reach this server
#
# DEVELOPMENT (not Docker):
#   - Leave empty to auto-detect your local network IP
#   - Or set explicitly: SERVER_HOST=192.168.1.100
#
# DOCKER:
#   - MUST be set to the Docker host's IP address
#   - Find your IP: ip addr show (Linux) or ifconfig (macOS)
#   - Example: SERVER_HOST=192.168.1.100
#   - DO NOT use 'localhost' or '127.0.0.1' (Chromecast cannot reach container)
#
# PORT MAPPING:
#   - If Docker maps ports (e.g., 80:8000), set SERVER_PORT to the EXTERNAL port
#   - Example: docker run -p 80:8000 â†’ SERVER_PORT=80
#
SERVER_HOST=

# Port the application runs on (default: 8000)
# In Docker with port mapping, set this to the EXTERNAL port that Chromecast uses
SERVER_PORT=8000
